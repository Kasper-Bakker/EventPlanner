@model IEnumerable<EventPlanner.Models.Ticket>

<h1>Tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>Evenement</th>
            <th>Deelnemer</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@(ticket.Event?.Name ?? "Unknown")</td>
                <td>@(ticket.Participant?.Name ?? "Unknown")</td>
                <td>@ticket.Status</td>
            </tr>
        }
    </tbody>
    <a asp-action="Index" asp-controller="Events" class="btn btn-primary">Teug naar evenementen</a>
</table>

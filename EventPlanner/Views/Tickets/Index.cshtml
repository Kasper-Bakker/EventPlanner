@model IEnumerable<EventPlanner.Models.Ticket>

<h1>Tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Participant</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Event.Name</td>
                <td>@ticket.Participant.Name</td>
                <td>@ticket.Status</td>
                <td>
                    @if (ticket.Status == "Unpaid")
                    {
                        <a href="/Tickets/MarkPaid/@ticket.Id" class="btn btn-success">Mark as Paid</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

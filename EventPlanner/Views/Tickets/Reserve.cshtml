@model EventPlanner.Models.Ticket

<h1>Reserve Ticket</h1>

<form method="post">
    <div class="form-group">
        <label for="ParticipantId">Participant</label>
        <select class="form-control" id="ParticipantId" name="ParticipantId">
            @foreach (var participant in ViewBag.Participants)
            {
                <option value="@participant.Id">@participant.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="EventId">Event</label>
        <input type="hidden" id="EventId" name="EventId" value="@Model.EventId">
        <p>@Model.Event.Name</p>
    </div>
    <button type="submit" class="btn btn-primary">Reserve</button>
</form>

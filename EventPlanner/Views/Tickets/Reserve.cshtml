@model EventPlanner.Models.Ticket

<h1>Reserveer jouw ticket voor @Model.Event.Name</h1>

<p>Beschikbare plaatsen: @Model.Event.GetAvailableSeats()</p>

@if (Model.Event.GetAvailableSeats() > 0)
{
    <form method="post">
        <div class="form-group">
            <label for="ParticipantName">Naam</label>
            <input type="text" id="ParticipantName" name="ParticipantName" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="TicketCount">Aantal Tickets</label>
            <input type="number" id="TicketCount" name="TicketCount" class="form-control" min="1" max="@Model.Event.GetAvailableSeats()" value="1" required />
        </div>

        <button type="submit" class="btn btn-primary">Koop Ticket(s)</button>
    </form>
}
else
{
    <p>Geen plaatsen beschikbaar voor dit evenement.</p>
}

<div>
    <a asp-action="Index">Terug naar evenementen lijst.</a>
</div>

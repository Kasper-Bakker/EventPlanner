@model IEnumerable<EventPlanner.Models.Organizer>

<h1>Organizers</h1>
<a asp-action="Create" class="btn btn-primary">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var organizer in Model)
        {
            <tr>
                <td>@organizer.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@organizer.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@organizer.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@organizer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
